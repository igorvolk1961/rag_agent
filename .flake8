[flake8]
max-line-length = 88
extend-ignore =
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .coverage,
    htmlcov,
    .tox,
    .nox
per-file-ignores =
    __init__.py:F401
    tests/*:S101
max-complexity = 10
